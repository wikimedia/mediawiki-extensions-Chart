{
	"compilerOptions": {
		"target": "es2022",
		"module": "ESNext",
		"lib": [ "ESNext" ],
		"moduleResolution": "node",
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"types": [ "node" ]
	},
	"include": [ "src/**/*.ts", "index.ts" ],
	"exclude": [ "node_modules" ]
}
